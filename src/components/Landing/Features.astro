---
import features from "../../config/features.json";
console.log(features);
---

<h1 class="text-5xl mt-5 font-bold text-center bg-slate-700 p-5 rounded-3xl">
  features
</h1>
{
  features.map((feature) => {
    return (
      <div class="flex flex-col md:flex-row p-10 gap-10 bg-blue-950 rounded-lg my-10">
        <h1 class="text-4xl font-bold text-pink-700">{feature.title}</h1>
        <p class="italic">{feature.description}</p>
      </div>
    );
  })
}
