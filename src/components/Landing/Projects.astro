---
import data from "../../config/projects.json";
const projects = data.projects;
console.log(projects);
---

<h1 class="bg-amber-700 text-5xl text-center rounded-lg uppercase p-10">
  projects
</h1>
<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10 p-10">
  <div class="flex flex-col p-10 gap-10 bg-blue-950 rounded-lg my-10">
    <h1 class="text-4xl font-bold text-pink-700">Project 1</h1>
    <p class="italic">Lorem ipsum dolor sit amet.</p>
  </div>
  <div
    class="flex flex-col md:flex-row p-10 gap-10 bg-blue-950 rounded-lg my-10"
  >
    <h1 class="text-4xl font-bold text-pink-700">Project 2</h1>
    <p class="italic">Lorem ipsum dolor sit amet.</p>
  </div>

  {
    projects.map((project) => {
      return (
        <div class="b-5 flex flex-col  max-h-100  p-10 gap-10 bg-blue-950 rounded-lg my-10">
          <h1 class="text-4xl font-bold text-pink-700">{project.title}</h1>
          <p class="line-clamp-15 italic">{project.description}</p>
        </div>
      );
    })
  }
</div>
